.goods-detail-box .header{width: 100%; border-bottom: 1rpx solid #e4e4e4; background: #fff; padding:26rpx 0; position: fixed; top: 1rpx; z-index:100;}
.goods-detail-box .header .li{text-align: center;}
.goods-detail-box .header .active{color: #ff495e;}
.goods-detail-box .wrapper{margin-top: 44px;}
.commont-nav-more{width:100rpx;border-left:1rpx solid #e4e4e4}
.commont-nav-more .icon-xiangyoujiantou{right:19px;top:50%;margin-top:-12rpx;}
.comment-more-nav{position:fixed;top:92rpx;left:0;right:0;width:100%;z-index:4999;background:#F1F1F5;padding:15px;visibility: hidden;}
.comment-more-nav.active{visibility: visible;}
/*list*/
.order-box{padding: 0 15px;}
.order-header{border-bottom: 1rpx solid #e4e4e4; padding: 20rpx 0;}
.order-header .title{font-size: 32rpx; color: #333;}
.order-header .cont{text-align: right; display: block; font-size: 28rpx; color: #ff495e;}
.order-cont{font-size: 28rpx; padding: 15rpx 0;}
.order-cont .order-num text, .order-cont .time{color: #777;}
.order-cont .time{padding: 6rpx; font-size: 26rpx;}
.order-shop{padding: 16rpx 0 16rpx 0;}
.order-shop-left, .order-shop-left image{width: 160rpx; height: 160rpx; border: 1rpx solid #e4e4e4; margin-right: 15rpx; display: inline-block; background:#fff;}
.order-shop .num{float: right;}
.order-btn{padding: 18rpx 0 18rpx 0;}
.order-btn .order-left{flex: 3;}
.order-btn .order-left text, .order-btn .order-left .text{font-size: 30rpx;}
.order-btn .order-left .text{color: #777;}
.order-btn .order-right{flex: 3;}
.order-list-box .left{flex: 4; overflow: hidden; position:relative;}
.order-list-box .right{flex: 1;}
.goods-number{position: absolute; right: 12px; top: 35%; font-size: 28rpx; color: #777;}
.btn-default{border-radius: 4px; border: 1rpx solid #ccc; padding: 6rpx 20rpx; font-size: 28rpx; color: #555; float: right;}
.btn-main{border-radius: 4px; border: 1rpx solid #ff495e; padding: 6rpx 20rpx; font-size: 28rpx; color: #ff495e; margin-left: 10rpx; float: right;}
.user-orderJtou{font-size:24rpx; position: absolute; top: 50%; right: 0; margin-top:-20rpx; color:#888;}
.order-img_list{background:rgba(255, 255, 255, 0.2);border-top:1rpx solid #e4e4e4;border-bottom:1rpx solid #e4e4e4}
.order-right-name{position:absolute;top:50%;left:180rpx;font-size:30rpx;color:#555;width:100%;margin-top:-46rpx;line-height:1.6}
.bar-btn{background:#ff495e;color:#fff !important;padding: 5rpx 10rpx;border-radius: 20rpx;}

.bargain-commont-bg{top:90rpx;z-index:111;}
.comment-more-nav .btn{padding:0 20rpx;background:#fff;border-radius: 30rpx;height:60rpx;line-height:50rpx;margin:0 25rpx 0 0;}
.comment-more-nav .iconfont{color:#ff495e;padding-right: 9rpx;}
.viewshow{display: none;text-align: center;padding:10rpx;}
.viewshow.active{display: block}
