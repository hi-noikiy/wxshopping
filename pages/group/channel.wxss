.product_screen_header{width: 100%; height: 40px; border-bottom: 1px solid #eee; border-top: 1px solid #eee; display: flex; background: #fff; line-height: 40px; position: fixed; top: 0; z-index: 99;}
.product_screen_header .list{flex: 1; text-align: center;}
.product_screen_header .active{color: #ff495e;}
.product_screen .icon-shaixuan{padding-right:8rpx;font-size:26rpx; color:#666}
.product_screen_header .list .name{padding-right:20rpx;}
.category-list{margin-top: 44px;}
/*遮罩层*/
.modal-mask{position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #000; opacity: 0.8; z-index: 99; bottom: 0;}
.modal-mask .close_box{position:fixed;top:50%; left:10px;margin-top:-30rpx;}
.modal-mask .close_box .icon-fanhui{font-size:36rpx;color:#fff;margin-bottom:6rpx;  -moz-transform: rotate(-180deg);-webkit-transform: rotate(-180deg);-ms-transform: rotate(-180deg);-o-transform: rotate(-180deg);transform: rotate(-180deg);}