/*********************************分类*******************************/
.cate-content{display: flex; flex-direction: row; font-size: 16px; position: fixed; top: 128rpx; bottom: 5rpx; width: 100%;}
.cate-content .left{flex-direction: column; display: flex; width: 200rpx; color: #444; height: 100%;}
.cate-content .left .type-nav{position: relative; height:90rpx;line-height:90rpx; text-align: center;  z-index: 10; background: #F8F8F8; display: block;font-size:27rpx;}
.cate-content .left .type-nav.selected{background: #fff; color: #ff495e; border-right: none;font-size:30rpx;}
.cate-content .right{display: flex; flex-direction: column; width: 550rpx; height: 100%; overflow: hidden;}
.cate-content .cont{width: 100%; display: flex; flex-flow: row wrap; align-content: flex-start;padding-top:26rpx;overflow:hidden}
.cate-content .cont .box{width: 100%; padding: 0 10px;}
.cate-content  .right .title{margin: 0 0 13rpx 5rpx; color: #222; display: block; font-size: 28rpx; width: 100%; font-weight: 700;}
.cate-content  .right .content{margin-bottom: 30rpx; padding-bottom: 10rpx; background: #fff;}
.cate-content  .right .content .img{padding: 13rpx 13rpx 4rpx 13rpx;}
.cate-content  .right .content .img image{width: 100%; height: 150rpx;}
.cate-content  .right .content text{text-align: center; display: block; font-size: 26rpx; padding-bottom: 14rpx; color: #444; padding:0 15rpx 30rpx 15rpx;
 }
